{
  "manifest_version": 3,
  "name": "VLINX",
  "description": "Browser extension to establish a VPN connection using a VLESS key",
  "version": "2.5.2",
  "permissions": [
    "proxy",
    "nativeMessaging",
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "options_page": "html/options.html"
}
